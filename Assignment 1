def count_upper_and_lower_case_letters(input_string):
    upper_count = 0
    lower_count = 0
    for char in input_string:
        if char.isupper():
            upper_count += 1
        elif char.islower():
            lower_count += 1
    return upper_count, lower_count
string = input("Enter_the_string :") 
upper, lower = count_upper_and_lower_case_letters(string)
print("Uppercase letters:", upper)
print("Lowercase letters:", lower)

